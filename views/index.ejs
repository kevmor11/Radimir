            //     console.log("Width", $(`.cover-image-${i}`).width());
            //     if($(`.cover-image-${i}`).width() > $(`.cover-image-${i}`).height()) {
            //       $(`.cover-image-${i}`).addClass('landscape');
            //     } else {
            //       $(`.cover-image-${i}`).addClass('portrait');
            //     }
            //   });
            // });
            albums.forEach((album, i) => {
              $(document).ready(() => {
